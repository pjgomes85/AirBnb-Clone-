<div class="row">
  <div class="col-md-5 col-md-offset-3 text-center">

<h2>Log in</h2>
<br/> <br/>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>

  <div class="form-group">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, placeholder: "Password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="form-group">
     <%= f.check_box :remember_me %> Remember Me
     <span class="pull-right">
     <%= link_to "Forgot Password", new_user_password_path %>
     </span>
  </div>
    <% end %>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-form form-control" %>

  </div>
<% end %>
<br/><br/>

<%= render "devise/shared/links" %>

</div>
</div>
