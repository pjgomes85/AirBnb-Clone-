<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4">
          <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
          <span class="h1 fw-bold mb-0">Log in</span>
        </div>



        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">



            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;"></h3>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>

            <div class="form-outline mb-4">
            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
              <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, placeholder: "Email", class: "form-control form-control-lg" %>
              <label class="form-label" for="form2Example18"></label>
            </div>

            <div class="form-outline mb-4">
            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
              <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, placeholder: "Password", class: "form-control form-control-lg" %>
              <label class="form-label" for="form2Example28"></label>
            </div>



            <div class="pt-1 mb-4">
               <%= f.button :submit, "Log in", class: "btn btn-info btn-lg btn-block" %>
            </div>

            <%= link_to "Forgot Password?", new_user_password_path, class: "small mb-5 pb-lg-2" %>
            <p>Don't have an account? <%= link_to "Register Here",  new_user_registration_path, class: "link-info" %></p>

        <% end %>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
</section>
