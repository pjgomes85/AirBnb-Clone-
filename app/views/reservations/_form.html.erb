<%= form_for([@room, @room.reservations.new])  do |f| %>

   <div class="booking-form booking" id="myHeader">
      <div class="price">Â£<%= @room.price %> night <span id="average_rating"></span><h3 class="pull-right">(<%= @reviews.count %>)<i class="fa-solid fa-star"></i>  </div>
      <form>
        <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
              <span class="form-label check-in">CHECK-IN</span>
                <%= f.date_field :start_date, class: "form-control", type: "date" %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <span class="form-label check-out">CHECK-OUT</span>
                <%= f.date_field :end_date, class: "form-control" %>
            </div>
          </div>
        </div>
          <%= f.submit "Book Now", class: "btn btn-normal btn-block" %>
          <% end %>
      </form>
    </div>
  <br/>

  <script>
window.onscroll = function() {myFunction()};

var header = document.getElementById("myHeader");
var sticky = header.offsetTop;

function myFunction() {
  if (window.pageYOffset > sticky) {
    header.classList.add("sticky");
  } else {
    header.classList.remove("sticky");
  }
}
</script>


<style>

.sticky {
  position: fixed;
  top: 0;
  width: 25%;
}


.price {
  margin-bottom: 20px;
  color: #3e485c;
  font-weight: 700;
  font-size: 20px;
}
</style>
