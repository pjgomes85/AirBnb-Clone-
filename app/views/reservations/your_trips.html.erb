<div class="col-md-3">
 <ul class="sidebar-list">
  <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link" %></li>
  <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
  <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link active" %></li>
 </ul>
 <br/>
 <br/>


</div>

<div class="col-md-9">
  <div class="panel panel-default">
    <div class="panel-heading">
    Your trips
    </div>
    <br/>
    <div class="panel-body">
      <% @trips.each do |trip| %>
        <div class="row">
          <div class="col-md-2">
            <%= trip.start_date.strftime('%v') %>
          </div>
          <div class="col-md-2">
              <%= link_to room_path(trip.room)  do %>
                <%= image_tag trip.room.cover_photo(:thumb), height: 60, width: 60 %>
              <% end %>
            </div>

          <div class="col-md-8">
            <%= link_to trip.room.listing_name, room_path(trip.room), style: "text-decoration:none" %>
            <span class="pull-right text-center">
              <%= image_tag avatar_url(trip.room.user), class: "img-circle avatar-medium" %><br/>
              <%= link_to user_path(trip.room.user), style: "text-decoration:none" do %>
                <%= trip.room.user.fullname %>
                <% end %>
            </span>
          </div>
        </div>
        <hr/>
        <% end %>
      </div>
    </div >
  </div>
</div>
