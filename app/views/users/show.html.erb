<div class="row">
	<div class="col-md-3">
		<div class="center">
			<%= cl_image_tag avatar_url(@user), class: "avatar-full" %>



		</div>
		<div class="panel panel-default">
			<div class="panel-heading">Verification</div>
			<div class="panel-body">
        <ul class="sidebar-list">
          <%# <% if @user.confirmation_token %>
        <li><i class="fa fa-envelope" aria-hidden="true"></i> <a href = "mailto: pjgomes85@hotmail.com" style=" text-decoration: none; "> <%= @user.email %></a> <span class="pull-right icon-babu"> <i class="fa fa-check-circle-o"></i></span></li>
         <%# <% end %>
        <%# <li>facebook:<span class="pull-right icon-babu"> <i class="fa fa-check-circle-o"></i></span></li> %>
        <li><i class="fa-solid fa-phone"></i> <%= @user.phone_number %> </i><span class="pull-right icon-babu"> <i class="fa fa-check-circle-o"></i></span></li>
			</div>
		</div>
	</div>

	<div class="col-md-9">
		<h2><%= @user.fullname %></h2>

		<div class="description row-space-3">
			<%= @user.description %>
		</div>



		<h4>Listings (<%= @rooms.length %>)</h4><br>

		<div class="row">

			<% @rooms.each do |room| %>
				<div class="col-md-4">
						<div class="panel-heading preview">
							<%= cl_image_tag room.photos[0].key, width: 250, height: 244, crop: :fill %>
						</div>
						<div class="panel-body">
							<%= link_to room.listing_name, room %>
						</div>
          </div>
			<% end %>
      </div>
		</div>
  </div>
</div>
