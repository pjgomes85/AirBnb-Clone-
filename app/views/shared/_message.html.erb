    <% if notice %>

      <div class="flash-msg" data-controller="flash_message">
        <p class="alert alert-success alert-dismissible" id="one">
          <i class="fa fa-check" aria-hidden="true"></i>
            <strong><%= notice  %></strong>
              <button type="button" class="close" data-dismiss="alert">&times;</button>
        </p>
      </div>
      <% end %>

      <% if alert %>

      <div class="flash-msg" data-controller="flash_message">

        <p class="alert alert-danger alert-dismissible" role="alert" id="one">
          <i class="fa fa-times" aria-hidden="true"></i>
            <strong><%= alert %></strong>
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </p>
      </div>
      <% end %>




