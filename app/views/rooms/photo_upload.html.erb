<div class="row">

  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>

      <div class="col-md-9">
       <div class="panel panel-default">

          <div class="panel-heading">
            Photos
          </div>

      <div class="panel-body">
        <div class="container">
          <div class="row">
            <div class="col-md-offset-3 col-md-6">

              <%= form_for @room, url: room_photos_path(@room), method: 'post', html: { multipart: true }, required: true  do |f| %>
                <div class="row">
                <div class="text-center">
                  <div class="image-form">
                    <i class="fa fa-cloud-upload" aria-hidden="true"></i>
                     <p><%= file_field_tag "images[]", type: :file, multiple: true %></p>
                    </span>

                  </div>
                </div>
                <br/>


                <div class="text-center">
                <%= f.submit "Add Photos", class: "btn btn-form" %>
                </div>

              <% end %>
            </div>


          <div>
        </div id="photos"><%= render 'photos/photos_list' %></div>
      </div>

    </div>
  </div>
</div>
